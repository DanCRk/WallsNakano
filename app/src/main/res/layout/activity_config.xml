<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/principal">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/drawer_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/fuente_medium"
        android:text="@string/apariencia" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_modooscuro"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modo_oscurp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/fuente_medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:text="@string/columnas"
        android:textColor="@color/color_texto"
        android:fontFamily="@font/fuente_medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/dats"
        android:fontFamily="@font/fuente_medium"/>

    <TextView
        android:id="@+id/AppConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:text="@string/confiapp"
        android:textColor="@color/color_texto"
        android:fontFamily="@font/fuente_medium"/>

    <TextView
        android:id="@+id/Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:text="@string/notifi"
        android:textColor="@color/color_texto"
        android:fontFamily="@font/fuente_medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/Otros"
        android:fontFamily="@font/fuente_medium"/>

    <TextView
        android:id="@+id/Aviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:text="@string/privacidad"
        android:textColor="@color/color_texto"
        android:fontFamily="@font/fuente_medium"/>

    <TextView
        android:id="@+id/Calificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:text="@string/calificanos"
        android:textColor="@color/color_texto"
        android:fontFamily="@font/fuente_medium"/>


</LinearLayout>